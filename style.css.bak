@font-face{
	font-family : "arvo";
	src: url("arvo.ttf") format("truetype");
	src: url("arvo-b.ttf") format("truetype");
}

body{
	font-family: "arvo";
	background: #3A4F58;
}


img{
	width: 55px;
	height: 55px;
}

.menu{
	background-color: #253D47;
	height: 100%;
	width: 160px;
	position: fixed;
	z-index: 1;
	top: 0;
	left: 0;
	overflow-x: hidden;
	padding-top: 20px;
}

.en-tete{
	background-color: #253D47;
	color: white;
	align-items: center;
	padding-top: 20px;
	padding-left: 50%;
}

.home{
    margin-left: auto;
    margin-right: auto;
}

.leftbar{
	padding : 20px;
	text-align: center;
	color: white;

}

a{
	color: white;
}

.titre{
	margin-left: 46%;
	margin-right: 40%;
}

.formulaire{
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	height: 100%;
	color: white;
	padding-top: 20px;
	margin-left: 10%;
}